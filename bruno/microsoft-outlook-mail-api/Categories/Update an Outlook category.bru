meta {
  name: Update an Outlook category
  type: http
  seq: 4
  tags: [
    Categories
  ]
}

patch {
  url: {{baseUrl}}/me/outlook/masterCategories/:category-id
  body: json
  auth: inherit
}

body:json {
  {
    "id": "",
    "displayName": "",
    "color": "none"
  }
}

example {
  name: Default
  
  request: {
    url: {{baseUrl}}/me/outlook/masterCategories/:category-id
    method: PATCH
    mode: json
    body:json: {
      {
        "id": "",
        "displayName": "",
        "color": "none"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: 200
      text: OK
    }
  
    body: {
      type: json
      content: '''
        {
          "id": "afc97c36-af15-4e96-bf52-e228c84d4567",
          "displayName": "Blue Category",
          "color": "preset7"
        }
      '''
    }
  }
}

